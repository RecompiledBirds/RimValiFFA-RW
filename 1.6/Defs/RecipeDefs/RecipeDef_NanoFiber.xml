<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <RecipeDef Name="RVFFA_BaseNanofiberRecipe" Abstract="True">
    <description>Weave nano-fiber from cloth.</description>
        <jobString>Weaving nano-fiber</jobString>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Smelt</effectWorking>
        <workAmount>7</workAmount>
        <soundWorking>Recipe_Smelt</soundWorking>
		<researchPrerequisites>
			<li>RVFFA_NanoFiberTech</li>
		</researchPrerequisites>
    </RecipeDef>

    <RecipeDef ParentName="RVFFA_BaseNanofiberRecipe">
        <defName>RVFFA_NanofiberRecipe</defName>
        <label>Weave Nano-Fiber</label>
        <ingredients>
            <li>
                <filter>
                <thingDefs>
                    <li>Cloth</li>
                </thingDefs>
                </filter>
                <count>10</count>
            </li>
        </ingredients>
        <products>
            <RVFFA_NanoFiber>8</RVFFA_NanoFiber>
        </products>
    </RecipeDef>


