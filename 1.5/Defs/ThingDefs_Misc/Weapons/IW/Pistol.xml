<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="BaseBullet">
		<defName>RVFFA_IWPistolBullet</defName>
		<label>Bullet</label>
		<graphicData>
			<texPath>RimValiFFA/Things/Weapons/Guns/Bullet/SmallBullet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>6</damageAmountBase>
			<stoppingPower>0.5</stoppingPower>
			<speed>75</speed>
			<armorPenetrationBase>0.10</armorPenetrationBase>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="RVFFA_BaseIWGun">
		<defName>RVFFA_IWPistol</defName>
		<label>Independent Worlds Pistol</label>
		<description>A simple non-Illuminate pistol. Whilst dealing less damage and having a slightly shorter range when compared to its Terran counterpart, it makes up for this by using coil technology for a better firing rate and more medium range viability.</description>
		<graphicData>
			<texPath>RimValiFFA/Things/Weapons/Guns/IWWeapons/Pistol_IndependentWorlds</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.4</uiIconScale>
		<soundInteract>Interact_Autopistol</soundInteract>

		<statBases>
			<WorkToMake>4500</WorkToMake>
			<Mass>1.5</Mass>
			<AccuracyTouch>0.85</AccuracyTouch>
			<AccuracyShort>0.70</AccuracyShort>
			<AccuracyMedium>0.50</AccuracyMedium>
			<AccuracyLong>0.40</AccuracyLong>
			<RangedWeapon_Cooldown>0.5</RangedWeapon_Cooldown>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>RVFFA_IWPistolBullet</defaultProjectile>
				<warmupTime>0.2</warmupTime>
				<range>22</range>
				<soundCast>Shot_Autopistol</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>0</muzzleFlashScale>
			</li>
		</verbs>
		<tools>
			<li>
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
		<costList>
			<Steel>20</Steel>
			<ComponentIndustrial>3</ComponentIndustrial>
		</costList>
		<recipeMaker>
			<researchPrerequisite>Gunsmithing</researchPrerequisite>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
		</recipeMaker>
	</ThingDef>
