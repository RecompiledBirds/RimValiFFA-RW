<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingCategoryDef>
		<defName>RVFFA_SniperRifleAmmo</defName>
		<!-- This is just for stockpile purposes. -->
		<label>Illuminate Sniper Ammunition</label>
		<parent>AmmoAdvanced</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberRailgunHighCaliber</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>RVFFA_SniperRifleAmmoSet</defName>
		<label>15x70mm Illuminate</label>
		<ammoTypes>
			<!-- This list ties ammo items together to corresponding projectile. -->
			<RVFFA_SniperRifleAmmoSabot>RVFFA_SniperRifleBulletSabot</RVFFA_SniperRifleAmmoSabot>
		</ammoTypes>
		<similarTo>AmmoSet_Rifle</similarTo>
	</CombatExtended.AmmoSetDef>
	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="RVFFA_AmmoSniperRifle" ParentName="SmallAmmoBase" Abstract="True">
		<description>Armour piercing, fin stabilised sabot projectiles, manufactured for use in Illuminate sniper rifles. Capable of easily punching through most power armour, and even some armoured vehicles.</description>
		<statBases>
			<Mass>0.11</Mass>
			<Bulk>0.10</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<!-- This lets traders stock this kind of ammo. -->
			<li>CE_AutoEnableCrafting_FabricationBench</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
			<!-- Railgun ammo isn't handloaded because it contains no propellant, and the sabots must be precision-machined anyway -->
		</tradeTags>
		<thingCategories>
			<li>RVFFA_SniperRifleAmmo</li>
		</thingCategories>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="RVFFA_AmmoSniperRifle">
		<defName>RVFFA_SniperRifleAmmoSabot</defName>
		<label>15x70mm Illuminate (Sabot)</label>
		<graphicData>
			<texPath>Things/Ammo/Railgun/HighCaliber</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>1.50</MarketValue>
		</statBases>
		<ammoClass>RailgunSabot</ammoClass>
		<!-- What ammo type appears on the ammo selector when loading it? Note: AmmoClass must be unique within the ammo set, or the system cannot distinguish between the two items. -->
	</ThingDef>

</Defs>
