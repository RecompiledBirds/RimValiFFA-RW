<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>
			Defs/ThingDef[defName="RVFFA_Rifle"]/tools <!-- This works the same as patching a melee weapon. -->
		</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>stock</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>8</power>
					<cooldownTime>1.55</cooldownTime>
					<chanceFactor>1.5</chanceFactor>
					<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>barrel</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>5</power>
					<cooldownTime>2.02</cooldownTime>
					<armorPenetrationBlunt>1.630</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>muzzle</label>
					<capacities>
						<li>Poke</li>
					</capacities>
					<power>8</power>
					<cooldownTime>1.55</cooldownTime>
					<armorPenetrationBlunt>2.755</armorPenetrationBlunt>
					<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
				</li>
			</tools>
		</value>
	</Operation>

	<Operation Class="CombatExtended.PatchOperationMakeGunCECompatible">
		<defName>RVFFA_Rifle</defName>
		<statBases>
			<Mass>3.5</Mass>
			<RangedWeapon_Cooldown>0.36</RangedWeapon_Cooldown>
			<SightsEfficiency>1.1</SightsEfficiency>
			<ShotSpread>0.06</ShotSpread>
			<SwayFactor>1.28</SwayFactor>
			<Bulk>10.90</Bulk>
			<WorkToMake>34000</WorkToMake>
		</statBases>
		<costList>
			<Steel>50</Steel>
			<ComponentIndustrial>4</ComponentIndustrial>
			<RVFFA_ProcessedTungsten>15</RVFFA_ProcessedTungsten>
		</costList>
		<Properties>
			<recoilAmount>1.4</recoilAmount>
			<verbClass>CombatExtended.Verb_ShootCE</verbClass>
			<hasStandardCommand>true</hasStandardCommand>
			<defaultProjectile>RVFFA_RifleBulletFMJ</defaultProjectile>
			<warmupTime>1.4</warmupTime>
			<range>58</range>
			<ticksBetweenBurstShots>10</ticksBetweenBurstShots>
			<burstShotCount>4</burstShotCount>
			<!-- Deleting this field will make the weapon fire single shots. -->
			<soundCast>Shot_Autopistol</soundCast>
			<soundCastTail>GunTail_Medium</soundCastTail>
			<muzzleFlashScale>2</muzzleFlashScale>
			<!-- The higher this value, the more visible the shooter is when firing in the dark. -->
			<targetParams>
				<canTargetLocations>true</canTargetLocations>
			</targetParams>
		</Properties>
		<AmmoUser>
			<magazineSize>40</magazineSize>
			<reloadTime>4.9</reloadTime>
			<ammoSet>RVFFA_RifleAmmoSet</ammoSet>
			<reloadOneAtATime>false</reloadOneAtATime>
		</AmmoUser>
		<FireModes>
			<aiUseBurstMode>FALSE</aiUseBurstMode>
			<aimedBurstShotCount>2</aimedBurstShotCount>
			<aiAimMode>AimedShot</aiAimMode>
		</FireModes>
		<weaponTags>
			<li>CE_AI_AR</li>
		</weaponTags>
		<researchPrerequisite>RVFFA_AdvancedWeaponryTech</researchPrerequisite>
		<AllowWithRunAndGun>true</AllowWithRunAndGun>
		<!-- When the Run And Gun mod is enabled, can this weapon be fired on the move? -->
	</Operation>

</Patch>
