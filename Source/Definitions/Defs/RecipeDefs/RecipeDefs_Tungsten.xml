<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef Name="RVFFA_BaseTungstenRecipe" Abstract="True">
		<label>Sinter Tungsten</label>
		<description>Turn raw, unusable tungsten into tungsten carbide, which has more use.</description>
		<jobString>Sintering tungsten</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>

		<researchPrerequisites>
			<li>RVFFA_TungstenProcessingTech</li>
		</researchPrerequisites>
	</RecipeDef>

	<RecipeDef ParentName="RVFFA_BaseTungstenRecipe">
		<defName>RVFFA_SinterTungsten</defName>
		<label>Sinter Tungsten</label>
		<workAmount>50</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RVFFA_Tungsten</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<RVFFA_ProcessedTungsten>8</RVFFA_ProcessedTungsten>
		</products>
	</RecipeDef>

