<Defs>
    <RecipeDef Name="RVFFA_BaseRefineCarbon" Abstract="True">
        <workAmount>30</workAmount>
        <description>Extract refined carbon from the resources used.</description>
        <jobString>Refining carbon</jobString>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>Smelt</effectWorking>
        <soundWorking>Recipe_Smelt</soundWorking>

		<researchPrerequisites>
			<li>RVFFA_CarbonTech</li>
		</researchPrerequisites>
    </RecipeDef>

    <RecipeDef ParentName="RVFFA_BaseRefineCarbon">
        <label>Refine carbon (5)</label>
        <defName>RVFFA_RefineCarbon</defName>
        <ingredients>
            <li>
                <filter>
                <thingDefs>
                    <li>Steel</li>
                </thingDefs>
                </filter>
                <count>5</count>
            </li>
            <li>
                <filter>
                <thingDefs>
                    <li>WoodLog</li>
                </thingDefs>
                </filter>
                <count>5</count>
            </li>
            </ingredients>
        <products>
			<RVFFA_RefinedCarbon>5</RVFFA_RefinedCarbon>
        </products>
    </RecipeDef>
    
