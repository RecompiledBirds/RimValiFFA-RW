<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<RecipeDef Name="RVFFA_BaseFerogelRecipe" Abstract="True">
		
		<description>Create ferrogel by re-assembling the ingredients at a near-atomic level.</description>
		<jobString>Printing ferrogel</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>

		<researchPrerequisites>
			<li>RVFFA_FerrogelTech</li>
		</researchPrerequisites>
	</RecipeDef>
	
	<RecipeDef ParentName="RVFFA_BaseFerogelRecipe">
		<defName>RVFFA_PrintFerrogel</defName>
		<label>Print ferrogel</label>
		<workAmount>10</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<products>
			<RVFFA_Ferrogel>10</RVFFA_Ferrogel>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="RVFFA_BaseFerogelRecipe">
		<defName>RVFFA_PrintFerrogelTwo</defName>
		<label>Print ferrogel (20)</label>
