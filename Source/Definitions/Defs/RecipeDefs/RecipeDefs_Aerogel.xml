				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<RVFFA_Ferrogel>20</RVFFA_Ferrogel>
		</products>
	</RecipeDef>

	<RecipeDef ParentName="RVFFA_BaseFerogelRecipe">
		<defName>RVFFA_PrintFerrogelThree</defName>
		<label>Print ferrogel (40)</label>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>30</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<products>
			<RVFFA_Ferrogel>40</RVFFA_Ferrogel>
		</products>
	</RecipeDef>
</Defs>